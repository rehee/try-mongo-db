@model IEnumerable<SDHC.Common.Entity.Models.DropDownSummary>
@{
  ViewBag.Title = "Dropdowns";
}

<div class="row clearfix">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
      <div class="card-header">

      </div>

      <div class="body">
        <table class="table table-bordered table-striped table-hover basic-example dataTable">
          <thead>
            <tr>
              <th>DropDown Title </th>
              <th>Item Count </th>
              <th>Option</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>DropDown Title </th>
              <th>Item Count </th>
              <th>Option</th>
            </tr>
          </tfoot>
          <tbody>
            @foreach (var item in Model)
            {
              <tr>
                <td>@item.DropDownName</td>
                <td>@item.Count</td>
                <td>
                  <a href="@Url.Action("Index","DropDown",new { @area=G.AdminPath,@id=item.TypeName }).Replace('.','_')" class="btn btn-info">Info</a>
                </td>''
              </tr>
            }
          </tbody>
        </table>

      </div>


    </div>
  </div>
</div>
@section script{
  <script src="/admin-lib/plugins/footable/js/footable.all.min.js"></script>
  <script src="/admin-lib/plugins/footable/js/footable.min.js"></script>
  <script>
    $(function () {
      $('.basic-example').DataTable();
    });
  </script>
}


